<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EbookTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
             
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="navbar-brand"><img src="@Url.Content("~/img/Ebook2.png")" width="180" height="60" alt="ebook"></a>
                            <a class="navbar-brand  text-danger" href="#"> &nbsp; &nbsp; ALE-BOooK  &nbsp;&nbsp;&nbsp;&nbsp; </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-danger" asp-area="" asp-controller="Home" asp-action="Index">  &nbsp; Home &nbsp; </a>

                        </li>&nbsp;&nbsp;
                        <li class="nav-item">
                            <a &nbsp; class="nav-link text-dark  btn btn-outline-danger" asp-area="" asp-controller="Home" asp-action="Privacy"> &nbsp; Privacy &nbsp; </a>
                        </li>&nbsp;&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-danger" asp-area="" asp-controller="Ebooks" asp-action="Index"> &nbsp; books &nbsp; </a>
                        </li>
                      
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EbookTest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
